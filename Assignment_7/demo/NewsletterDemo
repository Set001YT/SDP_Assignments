package demo;

import interfaces.*;
import concrete_things.*;

// Demo class
class NewsletterDemo {
    public static void main(String[] args) {
        // Create two different blogs
        TechBlog techBlog = new TechBlog();
        FoodBlog foodBlog = new FoodBlog();

        // Create subscribers
        Subscriber asset = new EmailSubscriber("Asset Iglikov", "asset@email.com");
        Subscriber rustem = new EmailSubscriber("Rustem Zhalelov", "rustem@email.com");
        Subscriber rakhat = new PremiumSubscriber("Alice Dosmagambetov", "rakhat@email.com", true);

        // John subscribes to both blogs
        techBlog.subscribe(asset);
        foodBlog.subscribe(asset);

        // Sarah only subscribes to TechBlog
        techBlog.subscribe(rustem);

        // Alice subscribes to FoodBlog only
        foodBlog.subscribe(rakhat);

        System.out.println("========================================\n");

        // TechBlog publishes article
        techBlog.publishArticle(
                "Introduction to AI era",
                "AI is being rapidly implemented in all spheres of life around the world...."
        );

        // FoodBlog publishes recipe
        foodBlog.publishRecipe(
                "Homemade Pizza Recipe",
                "Ingredients: flour, water, yeast, tomato sauce, mozzarella cheese..."
        );

        System.out.println("========================================\n");

        // Sarah unsubscribes from TechBlog
        techBlog.unsubscribe(rustem);

        // TechBlog publishes another article
        techBlog.publishArticle(
                "New iPhone 17!",
                "Apple unveiled a new line of iPhone 17 smartphones...."
        );

        // FoodBlog publishes another recipe
        foodBlog.publishRecipe(
                "Chocolate Cake",
                "A rich and moist chocolate cake with creamy frosting..."
        );
    }
}
